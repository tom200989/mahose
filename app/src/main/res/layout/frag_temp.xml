<?xml version="1.0" encoding="utf-8"?>
<com.hiber.tools.layout.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    tools:ignore="ContentDescription,Autofill,LabelFor,HardcodedText,RelativeOverlap">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:text="@string/the_topic_is_switching"
        android:textColor="@color/theme_color"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/iv_temp_1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="70dp"
        android:alpha="0.3"
        android:src="@drawable/bg_temp_circle" />

    <ImageView
        android:id="@+id/iv_temp_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="190dp"
        android:alpha="0.3"
        android:src="@drawable/bg_temp_circle" />

    <ImageView
        android:id="@+id/iv_temp_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="490dp"
        android:alpha="0.3"
        android:src="@drawable/bg_temp_circle" />

    <ImageView
        android:id="@+id/iv_temp_4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="590dp"
        android:alpha="0.3"
        android:src="@drawable/bg_temp_circle" />

</com.hiber.tools.layout.PercentRelativeLayout>
